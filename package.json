{
  "name": "template-nodejs",
  "version": "1.0.0",
  "description": "NodeJS Template with TypeScript, TypeORM, JWT and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc -w",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "npm run build && ts-node-dev --respawn --transpile-only --debug ./src/index.ts",
    "prod": "npm run build && node ./dist/src/index.js",
    "test": "npm run build && jest --silent --watchAll --runInBand --config jest.config.js --detectOpenHandles",
    "test-coverage": "node_modules/.bin/jest --watchAll --runInBand --verbose --coverage",
    "format": "./node_modules/.bin/tslint --project . --fix ; ./node_modules/.bin/prettier --write \"src/**/*.ts\"",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n"
  },
  "author": "didjo972",
  "license": "ISC",
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^12.0.4",
    "express": "^4.17.1",
    "helmet": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "0.2.41",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/node": "^13.1.8",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "jest": "^27.4.7",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  }
}
