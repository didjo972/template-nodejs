{
  "name": "template-nodejs",
  "version": "1.0.0",
  "description": "NodeJS Template with TypeScript, TypeORM, JWT and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc -w",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "pretest": "npm run build",
    "test": "jest --config jest.config.js --detectOpenHandles",
    "format": "./node_modules/.bin/tslint --project . --fix ; ./node_modules/.bin/prettier --write 'src/**/*.{ts}'"
  },
  "author": "didjo972",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  }
}
